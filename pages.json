{
	"pages": [
		//pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/login/login",
			"style": {}
		}, {
			"path": "pages/my/my",
			"style": {}
		}, {
			"path": "pages/book/book",
			"style": {}
		}, {
			"path": "pages/history/history",
			"style": {
				"enablePullDownRefresh": true  //设置为true表示当前页面开启下拉刷新
			}
		}
	],

	"tabBar": {
		"color": "#8a8a8a",
		"selectedColor": "#2594d7",
		"borderStyle": "black",
		"backgroundColor": "#ffffff",
		"list": [{
				"pagePath": "pages/book/book",
				"text": "预约",
				"iconPath": "static/tabbar/component.png",
				"selectedIconPath": "static/tabbar/component_cur.png"
			},
			{
				"pagePath": "pages/history/history",
				"text": "历史",
				"iconPath": "static/tabbar/basics.png",
				"selectedIconPath": "static/tabbar/basics_cur.png"
			}, {
				"pagePath": "pages/my/my",
				"text": "我的",
				"iconPath": "static/tabbar/about.png",
				"selectedIconPath": "static/tabbar/about_cur.png"
			}
		]
	},

	"globalStyle": {
		"mp-alipay": {
			/* 支付宝小程序特有相关 */
			"transparentTitle": "always",
			"allowsBounceVertical": "NO"
		},
		"navigationBarBackgroundColor": "#0081ff",
		"navigationBarTitleText": "Super Seat",
		"navigationStyle": "custom",
		"navigationBarTextStyle": "white"
	},
	"usingComponts": true,
	"condition": { //模式配置，仅开发期间生效
		"current": 0, //当前激活的模式(list 的索引项)
		"list": [{
			"name": "登录", //模式名称
			"path": "pages/login/login", //启动页面
			"query": "" //启动参数
		}]
	}

}
